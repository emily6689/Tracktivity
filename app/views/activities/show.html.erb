<h1> <%= @activity.name %></h1>

<div class='clock'>
<% if !@log %>
  <%= link_to "Clock In", activity_logs_path(@activity), class: 'clock-in button', :method => :post, remote: true %>
<% else %>
  <%= link_to "Clock Out", activity_logs_path(@activity), class: 'clock-out button', :method => :post, remote: true %>
<% end %>
</div>
<div class='timer'>
  <p><span class='hours'></span>:<span class='minutes'></span>:<span class='seconds'></span></p>
</div>
<div class='results'>
</div>


<% content_for :extra_footer do %>
  <script>
    var timer;
    $(function(){
      $('.clock').on('ajax:success', function(event, response){
        $link = $(event.target);
        $link.hide();
        if ($link.text() === 'Clock In'){
          $link.text('Clock Out');
          stopWatch();
          startTimer();
        } else {
          $link.text('Clock In');
          stopTimer();
        }
        $link.show();
      });
      stopWatch('<%= @log.time_clocked_in if @log %>')
      <% if @log %>
        startTimer();
      <% end %>
    });

    function stopWatch(clockIn) {
      if (!clockIn || !clockIn.length) {
        return setClock(0, 0, 0)
      }
      var now = new Date()
      var start = new Date(clockIn);
      var difference = moment.utc(moment(now,"DD/MM/YYYY HH:mm:ss").diff(moment(start,"DD/MM/YYYY HH:mm:ss")));
      setClock(difference.get('hour'), difference.get('minute'), difference.get('second'));

    }
    function setClock(hours, minutes, seconds) {
      $('.hours').text(hours);
      $('.minutes').text(minutes);
      $('.seconds').text(seconds);
    }

    function startTimer(){
      // timer = setInterval(stopWatch('<%= @log.time_clocked_in %>'), 1000);
      timer = setInterval(function(){
        var seconds = Number($('.seconds').text());
        var minutes = Number($('.minutes').text());
        var hours = Number($('.hours').text());
        seconds++;
        if (seconds > 59){
          seconds = 0;
          minutes++;
        }
        if (minutes > 59){
          minutes = 0;
          hours++;
        }
        if (seconds < 10) {
          seconds = '0' + seconds;
        }
        if (minutes < 10) {
          minutes = '0' + minutes;
        }
        var seconds = $('.seconds').text(seconds);
        var minutes = $('.minutes').text(minutes);
        var hours = $('.hours').text(hours);
      }, 1000)
