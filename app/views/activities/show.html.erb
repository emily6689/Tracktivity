      //   var minutes = $('.minutes').text();
      //   $('.minutes').text(++minutes);
      // }, 60000)
      // setInterval(function(){
      // var minutes = $('.minutes').text();
      // $('.minutes').text(++minutes);
      // }, 3600000)
    }

    function stopTimer(){
      clearInterval(timer);
      // $('.results').html($('.timer').html());
      // setClock(0, 0, 0);
